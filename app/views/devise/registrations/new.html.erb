<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if params[:plan] =='2' %>
      <h1 class="text-center">Pro Membership</h1>
      <h4 class="text-center">Join our community and get access to contact information for $10/month</h4>
    <% else %>
      <h1 class="text-center">Basic Membership</h1>
      <h4 class="text-center">Sign up for free and become a part of our community</h4><br />
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>